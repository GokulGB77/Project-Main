        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">User Details </h2>
                    <p>View Details or Block  User </p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row " >
                        <div class="col-md-12 ">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            
                                            <th class="text-center" style="width: 10%;" >Sl No.</th>
                                            <th style="width: 20%;" >Name</th>
                                            <th style="width: 20%;">Email</th>
                                            <th style="width: 15%;">Mobile</th>

                                            <th style="width: 10%;" class="text-center" >Status</th>
                                            <th style="width: 25%;" class="text-center" >Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach((item, index)=> { %>
                                            <tr>
                                               
                                                <td class="text-center" >
                                                    <%= index + 1 %>
                                                </td> 
                                                <td ><b>
                                                        <%= item.name %>
                                                    </b></td>
                                                <td >
                                                    <%= item.email %>
                                                </td>
                                                <td >
                                                    <%= item.mobile %>
                                                </td>
                                                <td  class="text-center">
                                                    <span
                                                        class="badge  rounded-pill alert-<%= item.status === 1 ? 'success' : 'danger' %>">
                                                        <%= item.status===0 ? 'Blocked' : 'Active' %>
                                                    </span>
                                                </td>
                                                <td style="width: 10%" class="text-center">
                                                    <div class="">
                                                        <% if (item.status ===0 ) { %>
                                                            <button class="btn  btn-outline-success " type="button"
                                                                onclick="location.href='/admin/user-details/block?id=<%= item._id %>'">Unblock</button>
                                                        <% } else { %>
                                                            <button class="btn  btn-outline-danger" type="button"
                                                                onclick="location.href='/admin/user-details/unblock?id=<%= item._id %>'">Block</button>
                                                        <% } %>
                                                    </div>
                                                    
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>

                                </table>
                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div> <!-- card .// -->
        </section> <!-- content-main end// -->
