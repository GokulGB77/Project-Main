        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order Details</h2>
                    <p>Details for Order ID: #<%= orderDetails.orderId %>
                    </p>
                </div>
            </div>
            <div class="card">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
                            <span>
                                <i class="material-icons md-calendar_today"></i> <b>
                                    <%= formattedDate %>, <%= formattedTime %>
                                </b>
                            </span> <br>
                            <small class="text-muted">Order ID: <%= orderDetails.orderId %></small>
                        </div>
                        <div class="col-lg-6 col-md-6 ms-auto text-md-end">
                            <% if (orderDetails.orderStatus==="pending" ){ %>
                                <label for="form-select">Change status:</label>
                                <select id="statusSelect" class="form-select d-inline-block mb-lg-0 mb-15 mw-200">
                                    <option>Order Shipped</option>
                                    <option>Order Delivered</option>
                                </select>
                                <a class="btn btn-primary" href="#">Save</a>
                                <% } else if (orderDetails.orderStatus==="Delivered" ){ %>
                                    <label for="form-select">Change status:</label>
                                    <select id="statusSelect" class="form-select d-inline-block mb-lg-0 mb-15 mw-200">
                                        <option>Order Returned</option>
                                    </select>
                                    <a class="btn btn-primary" href="#">Save</a>
                                <% } else if (orderDetails.orderStatus==="shipped" ){ %>
                                    <label for="form-select">Change status:</label>
                                    <select id="statusSelect" class="form-select d-inline-block mb-lg-0 mb-15 mw-200">
                                        <option>Order Delivered</option>
                                    </select>
                                    <a class="btn btn-primary" href="#">Save</a>
                                    <% } %>
                             

                                        <!-- <option>Order Pending</option>
                                        <option>Order Shipped</option>
                                        <option>Order Delivered</option>
                                        <option>Order Returned</option>
                                        <option>Cancel Order</option> -->
                            <a class="btn btn-secondary print ms-2" href="#"><i
                                    class="icon material-icons md-print"></i></a>
                        </div>

                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="row mb-50 mt-20 order-info-wrap">
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-person"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Customer</h6>
                                    <p class="mb-1">
                                        <%= orderDetails.user.name %> <br>
                                            <%= orderDetails.user.email %> <br>
                                                <%= orderDetails.user.mobile %>
                                    </p>
                                    <!-- <a href="#">View profile</a> -->
                                </div>
                            </article>
                        </div> <!-- col// -->
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-local_shipping"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Order info</h6>
                                    <p class="mb-1">
                                        Shipping: Fargo express <br> Pay method:
                                        <% if (orderDetails.paymentMethod==="cod" ) { %>
                                            Cash On Delivery
                                            <% } else if (orderDetails.paymentMethod==="razorpay" ) { %>
                                                Online Payment - RazorPay
                                                <% } %> <br>
                                    </p>
                                    <!-- badges-------------------------->
                                    <div>
                                        <% if (orderDetails.orderStatus==="pending" ) { %>
                                            <span class="badge rounded-pill  alert-warning text-warning"
                                                style="width:7rem;; font-size: 0.8rem; ;">Delivery
                                                Pending</span>
                                            <% } else if(orderDetails.orderStatus==="delivered" ) { %>
                                                <span class="badge rounded-pill alert-success text-success"
                                                    style="width:5rem;; font-size: 0.8rem; ;">Delivered</span>
                                                <% } else if(orderDetails.orderStatus==="cancelled" ) { %>
                                                    <span class="badge rounded-pill alert-danger text-danger"
                                                        style=" width:5rem; font-size: 0.8rem;">Cancelled</span>
                                                    <% } else if(orderDetails.orderStatus==="returned" ) { %>
                                                        <span class="badge rounded-pill alert-primary text-primary"
                                                            style="width:5rem; font-size: 0.8rem;">Returned</span>
                                                        <% } %>
                                    </div>
                                    <!-- <a href="#">Download info</a> -->
                                </div>
                            </article>
                        </div> <!-- col// -->
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-place"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Deliver to</h6>
                                    <p class="mb-1">
                                        Name: <%= orderDetails.address.name %> <br>City: <%= orderDetails.address.city
                                                %>, <%= orderDetails.address.state %> <br>
                                                    <%= orderDetails.address.house %>, <%= orderDetails.address.street
                                                            %><br> Pincode: <%= orderDetails.address.pincode %>
                                    </p>
                                    <!-- <a href="#">View profile</a> -->
                                </div>
                            </article>
                        </div> <!-- col// -->
                    </div> <!-- row // -->
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th width="40%" style="text-align: center;">Product</th>
                                            <th width="20%">Unit Price</th>
                                            <th width="20%">Quantity</th>
                                            <th width="20%" class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orderDetails.orderProducts.forEach(item=>{ %>
                                            <tr>
                                                <td>
                                                    <a class="itemside" href="#">
                                                        <div class="left">
                                                            <img src="/productAssets/<%=item.product.images[0] %>"
                                                                width="60" height="50" class="img-xs"
                                                                alt="<%= item.product.productName %>">
                                                        </div>
                                                        <div class="info">
                                                            <%= item.product.productName %>
                                                        </div>
                                                    </a>
                                                </td>
                                                <td>&#8377; <%= (item.price).toLocaleString() %>
                                                <td>
                                                    <%= item.quantity %>
                                                </td>
                                                <td class="text-end"> &#8377; <%= (item.totalPrice).toLocaleString() %>
                                                </td>
                                            </tr>
                                            <% }) %>


                                                <tr>
                                                    <td colspan="4">
                                                        <article class="float-end">
                                                            <dl class="dlist">
                                                                <dt>Subtotal:</dt>
                                                                <dd>&#8377; <%=
                                                                        (orderDetails.orderTotal).toLocaleString() %>
                                                                </dd>
                                                            </dl>
                                                            <dl class="dlist">
                                                                <dt>Shipping cost:</dt>
                                                                <dd>&#8377; <%= deliveryCharge %>
                                                                </dd>
                                                            </dl>
                                                            <dl class="dlist">
                                                                <dt>Grand total:</dt>
                                                                <dd> <b class="h5">&#8377; <%=
                                                                            (orderDetails.orderTotal+deliveryCharge).toLocaleString()
                                                                            %></b> </dd>
                                                            </dl>
                                                            <dl class="dlist">
                                                                <dt class="text-muted">Status:</dt>
                                                                <!-- badges-------------------------->
                                                                <dd>
                                                                    <% if (orderDetails.paymentMethod==="cod" &&
                                                                        orderDetails.orderStatus==="pending" ) { %>
                                                                        <span
                                                                            class="badge rounded-pill alert-warning text-warning">Payment
                                                                            Pending</span>

                                                                        <% } else if
                                                                            (orderDetails.paymentMethod==="razorpay" &&
                                                                            orderDetails.orderStatus==="pending" ) { %>
                                                                            <span
                                                                                class="badge rounded-pill alert-success text-success">Payment
                                                                                Done</span>

                                                                            <% } else if
                                                                                (orderDetails.orderStatus==="returned"
                                                                                &&
                                                                                (orderDetails.paymentMethod==="razorpay"
                                                                                || orderDetails.paymentMethod==="cod" ))
                                                                                { %>
                                                                                <span
                                                                                    class="badge rounded-pill alert-primary text-primary">Refund
                                                                                    Initiated</span>

                                                                                <% } else if
                                                                                    ((orderDetails.paymentMethod==="razorpay"
                                                                                    ||
                                                                                    orderDetails.paymentMethod==="cod"
                                                                                    )&&
                                                                                    orderDetails.orderStatus==="delivered"
                                                                                    ) { %>
                                                                                    <span
                                                                                        class="badge rounded-pill alert-success text-success">Payment
                                                                                        Done</span>

                                                                                    <% } else if
                                                                                        (orderDetails.paymentMethod==="razorpay"
                                                                                        &&
                                                                                        orderDetails.orderStatus==="cancelled"
                                                                                        ) { %>
                                                                                        <span
                                                                                            class="badge rounded-pill alert-primary text-primary">Refund
                                                                                            Initiated</span>

                                                                                        <% } else if
                                                                                            (orderDetails.paymentMethod==="cod"
                                                                                            &&
                                                                                            orderDetails.orderStatus==="cancelled"
                                                                                            ) { %>
                                                                                            <span
                                                                                                class="badge rounded-pill alert-info text-info">No
                                                                                                Payment Done</span>
                                                                                            <% } %>
                                                                </dd>
                                                            </dl>
                                                        </article>
                                                    </td>
                                                </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- table-responsive// -->
                            <a class="btn btn-primary" href="page-orders-tracking.html">Cancel Order </a>
                        </div> <!-- col// -->
                        <div class="col-lg-1"></div>
                        <div class="col-lg-4">
                            <!-- <div class="box shadow-sm bg-light">
                                <h6 class="mb-15">Payment info</h6>
                                <p>
                                    <img src="/admin/imgs/card-brands/2.png" class="border" height="20"> Master Card
                                    **** **** 4768 <br>
                                    Business name: Grand Market LLC <br>
                                    Phone: +1 (800) 555-154-52
                                </p>
                            </div> -->
                            <div class="h-25 pt-4">
                                <div class="mb-3">
                                    <label>Cancellation Reason</label>
                                    <textarea class="form-control" style="padding: 0;margin:0px;" name="notes" id="notes" placeholder="Type some note" >
                                        <% if (orderDetails.adminNotes) { %>
                                            <%= orderDetails.adminNotes %>
                                        <% } %>
                                    </textarea>
                                   
                                </div>
                                
                                <button id="saveButton" class="btn btn-primary">Cancel Order</button>
                            </div>
                        </div> <!-- col// -->
                    </div>
                    <script>
                        document.addEventListener('DOMContentLoaded', function () {
                            document.getElementById('saveButton').addEventListener('click', async function () {
                                try {
                                    const notes = document.getElementById("notes").value;
                                    const orderId = "<%= orderDetails._id %>";
                                    if (notes) {
                                        const response = await fetch('/admin/orders/order-details/save-notes?orderId=<%=orderDetails._id %>', {
                                            method: 'POST',
                                            body: JSON.stringify({ orderId: orderId, notes: notes }),
                                            headers: {
                                                'Content-Type': 'application/json',
                                            }
                                        });

                                        if (response.ok) {
                                            const data = await response.json();
                                            console.log('Notes saved:', data);

                                            sessionStorage.setItem('showToastAfterReload', 'true');

                                            window.location.reload()
                                        } else {
                                            // Display error toast based on the response status code
                                            const errorMessage = `Error saving notes (${response.status})`;
                                            console.error(errorMessage);
                                            $.toast({
                                                heading: 'Error Saving Notes',
                                                text: errorMessage,
                                                position: 'top-center',
                                                showHideTransition: 'slide',
                                                icon: 'error'
                                            });
                                        }
                                    } else {
                                        $.toast({
                                            heading: 'Enter Notes Before Saving',
                                            text: 'You have enter some notes to save it to the order details.',
                                            position: 'top-center',
                                            showHideTransition: 'slide',
                                            icon: 'info'
                                        });
                                    }


                                } catch (error) {
                                    console.error('There was a problem with your fetch operation:', error);
                                    $.toast({
                                        heading: 'There was a problem with the fetch operation',
                                        position: 'top-center',
                                        showHideTransition: 'slide',
                                        icon: 'error'
                                    });
                                }
                            });
                        });

                        // Check if there is a flag to show toast after reload
                        window.onload = function () {
                            const showToastAfterReload = sessionStorage.getItem('showToastAfterReload');
                            if (showToastAfterReload === 'true') {
                                // Display the toast
                                $.toast({
                                    heading: 'Notes Saved..',
                                    text: 'Notes Successfully Saved.',
                                    position: 'top-center',
                                    showHideTransition: 'slide',
                                    icon: 'success'
                                });

                                // Remove the flag from session storage
                                sessionStorage.removeItem('showToastAfterReload');
                            }
                        };
                    </script>

                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
