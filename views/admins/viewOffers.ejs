            <!-- Add Category Offer Fetch Fn -->
            <script>
                document.querySelector('form[action="/add-category-offer"]').addEventListener('submit', async (e) => {
                    e.preventDefault();

                    const formData = new FormData(e.target);
                    const requestData = {};

                    for (const [key, value] of formData.entries()) {
                        requestData[key] = value;
                    }

                    try {
                        const response = await fetch('/admin/add-category-offer', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(requestData)
                        });

                        const data = await response.json();

                        if (response.ok) {
                            // Handle successful response
                            console.log('Category offer created:', data);

                            const modal = bootstrap.Modal.getInstance(document.getElementById('createCategoryModal'));
                            modal.hide();
                            window.location.reload()
                            req.session.toastMessage = "Category Offer Added";

                        } else {
                            // Handle error response
                            console.error('Error creating category offer:', data);
                        }
                    } catch (error) {
                        console.error('Error:', error);
                    }
                });

                window.addEventListener('load', function () {
                    const toastMessage = '<%= typeof session !== "undefined" ? session.toastMessage : "" %>';
                    if (toastMessage) {
                        $.toast({
                            heading: 'Success',
                            text: "Category Offer Added",
                            showHideTransition: 'slide',
                            icon: 'success',
                            position: 'top-center',
                            hideAfter: 4000

                        });
                        delete req.session.toastMessage;

                    }
                });
            </script>

            <!-- Activate Category Offer Fetch Fn -->
            <script>
                const toogleStatus = async (offerId) => {
                    try {
                        const response = await fetch(`/admin/toggle-category-offer?id=${offerId}`, {
                            method: 'GET',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                        });

                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }

                        const data = await response.json();
                        console.log(data);

                        // Update the <td> element with the new status
                        const offerStatusTd = document.querySelector(`td[data-offer-id="${offerId}"] span.badge`);
                        const newStatus = data.isActive ? 'Active' : 'Inactive';
                        const badgeClass = data.isActive ? 'alert-success' : 'alert-danger';
                        offerStatusTd.classList.remove('alert-danger');
                        offerStatusTd.classList.add(badgeClass);
                        offerStatusTd.textContent = newStatus;

                        // Update the action button
                        const offerActionTd = document.querySelector(`td[data-offer-id="${offerId}"] div:last-child button`);
                        offerActionTd.textContent = data.isActive ? 'Deactivate' : 'Activate';
                        offerActionTd.removeEventListener('click', activateOffer);
                        offerActionTd.addEventListener('click', () => deactivateOffer(offerId));
                    } catch (error) {
                        console.error('Error:', error);
                    }
                };



            </script>

