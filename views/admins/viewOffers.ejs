<div class="card-body">
    <!-- Category Offers -->
    <% const categoryOffers=offers.filter(offer=> offer.categoryOffer && offer.categoryOffer.discountPercentage !== 0);
        %>
        <% if (categoryOffers.length> 0) { %>
            <h2 class="m-3" style="text-decoration: underline;">Category Offers</h2>
            <table class="table category-offers mb-4">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Discount Percentage</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% categoryOffers.forEach(offer=> { %>
                        <tr>
                            <td>
                                <%= offer.title %>
                            </td>
                            <td>
                                <%= offer.description %>
                            </td>
                            <td>
                                <%= new Date(offer.startDate).toLocaleDateString() %>
                            </td>
                            <td>
                                <%= new Date(offer.endDate).toLocaleDateString() %>
                            </td>
                            <td>
                                <%= offer.categoryOffer.discountPercentage %>
                            </td>
                            <td>
                                <%= offer.categoryOffer.category.cName %>
                            </td>
                        <td>
                            <button onclick="toggleStatus('<%= offer._id %>')" class="btn btn-<%= offer.isActive ? 'danger' : 'success' %>">
                                <%= offer.isActive ? 'Block' : 'Activate' %>
                            </button>
                        </td>

                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <% } %>

                <!-- Product Offers -->
                <% const productOffers=offers.filter(offer=> offer.productOffer && offer.productOffer.discountPercentage
                    !== 0); %>
                    <% if (productOffers.length> 0) { %>
                        <h2 class="m-3" style="text-decoration: underline;">Product Offers</h2>
                        <table class="table product-offers mb-4">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Discount Percentage</th>
                                    <th>Products</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% productOffers.forEach(offer=> { %>
                                    <tr>
                                        <td>
                                            <%= offer.title %>
                                        </td>
                                        <td>
                                            <%= offer.description %>
                                        </td>
                                        <td>
                                            <%= new Date(offer.startDate).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= new Date(offer.endDate).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= offer.productOffer.discountPercentage %>
                                        </td>
                                        <td>
                                            <%= offer.productOffer.products.map(product=> product.pname).join(', ') %>
                                        </td>
                                    <td>
                                        <button onclick="toggleStatus('<%= offer._id %>')" class="btn btn-<%= offer.isActive ? 'danger' : 'success' %>">
                                            <%= offer.isActive ? 'Block' : 'Activate' %>
                                        </button>
                                    </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <% } %>

                        
                            <% if (referralOffers.length> 0) { %>
                                <h2 class="m-3" style="text-decoration: underline;">Referral Offers</h2>
                                <table class="table referral-offers mb-4">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>Referred User Reward</th>
                                            <th>Referring User Reward</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% referralOffers.forEach(offer=> { %>
                                            <tr>
                                                <td>
                                                    <%= offer.title %>
                                                </td>
                                                <td>
                                                    <%= offer.description %>
                                                </td>
                                                <td>
                                                    <%= new Date(offer.startDate).toLocaleDateString() %>
                                                </td>
                                                <td>
                                                    <%= new Date(offer.endDate).toLocaleDateString() %>
                                                </td>
                                                <td>
                                                    <%= offer.referredUserReward %>
                                                </td>
                                                <td>
                                                    <%= offer.referringUserReward %>
                                                </td>
                                                <td>
                                                    <button onclick="toggleReferalStatus('<%= offer._id %>')"
                                                        class="btn btn-<%= offer.isActive ? 'danger' : 'success' %>">
                                                        <%= offer.isActive ? 'Block' : 'Activate' %>
                                                    </button>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <p class="m-3">No referral offers available.</p>
                                    <% } %>

