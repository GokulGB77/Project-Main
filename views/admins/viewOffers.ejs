                        } else {
                            // Handle error response
                            console.error('Error creating product offer:', data);
                        }
                    } catch (error) {
                        console.error('Error:', error);
                    }
                });

                function showToastMessage(message) {
                    $.toast({
                        heading: 'Success',
                        text: message,
                        showHideTransition: 'slide',
                        icon: 'success',
                        position: 'top-center',
                        hideAfter: 4000
                    });
