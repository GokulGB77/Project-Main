                        <h3>Filter By</h3>
                        <ul class="checkbox-list">
                            <li class="checkbox-container">
                                <input type="checkbox" id="category1" name="category" value="Outdoor">
                                <label for="category1">Outdoor </label>
                            </li>
                            <li class="checkbox-container">
                                <input type="checkbox" id="category2" name="category" value=">Dining Room">
                                <label for="category2">Dining Room </label>
                            </li>
                            <li class="checkbox-container">
